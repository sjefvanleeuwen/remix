{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=RemixHub.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtKey": "This_is_a_very_secure_key_that_should_be_replaced_in_production",
  "JwtIssuer": "RemixHub",
  "JwtAudience": "RemixHub",
  "JwtExpireDays": 7,
  "AppUrl": "http://localhost:5002",  // Set to HTTP client URL with port 5002
  "Email": {
    "SmtpServer": "localhost",
    "SmtpPort": 1025,
    "SmtpUsername": "notifications@yourdomain.com",
    "SmtpPassword": "your_smtp_password",
    "SenderEmail": "notifications@yourdomain.com",
    "SenderName": "RemixHub",
    "EnableSsl": false
  },
  "RecaptchaSecretKey": "your_recaptcha_secret_key",
  "Captcha": {
    "NoiseOpacity": 255,
    "RotationRange": 45,
    "OffsetRange": 5,
    "NoiseLineCount": 8,
    "ForegroundColor": "#AAAAAA",
    "BackgroundColor": "#FFFFFF",
    "DotCount": 50
  }
}
